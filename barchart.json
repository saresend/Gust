{
    "$schema": "https://vega.github.io/schema/vega/v3.0.json",
    "width": 500,
    "height": 300,
    "padding": 5,
    "data": [
        {
            "name": "table",
            "values": [
                {
                    "category": "A",
                    "amount": 0
                },
                {
                    "category": "B",
                    "amount": 1
                },
                {
                    "category": "C",
                    "amount": 8
                },
                {
                    "category": "D",
                    "amount": 27
                },
                {
                    "category": "E",
                    "amount": 64
                },
                {
                    "category": "F",
                    "amount": 125
                },
                {
                    "category": "G",
                    "amount": 216
                },
                {
                    "category": "H",
                    "amount": 343
                },
                {
                    "category": "I",
                    "amount": 512
                },
                {
                    "category": "J",
                    "amount": 729
                }
            ]
        }
    ],
    "scales": [
        {
            "name": "xscale",
            "type": "band",
            "domain": {
                "data": "table",
                "field": "category"
            },
            "range": "width",
            "padding": 0.05
        },
        {
            "name": "yscale",
            "type": "linear",
            "domain": {
                "data": "table",
                "field": "amount"
            },
            "range": "height",
            "padding": 0.05
        }
    ],
    "axes": [
        {
            "orient": "bottom",
            "scale": "xscale"
        },
        {
            "orient": "left",
            "scale": "yscale"
        }
    ],
    "marks": [
        {
            "type": "rect",
            "from": {
                "data": "table"
            },
            "encode": {
                "enter": {
                    "x": {
                        "field": "category",
                        "scale": "xscale"
                    },
                    "width": {
                        "scale": "xscale",
                        "band": 1
                    },
                    "y": {
                        "field": "amount",
                        "scale": "yscale"
                    },
                    "y2": {
                        "scale": "yscale",
                        "value": 0
                    }
                },
                "update": {
                    "fill": {
                        "fillOpacity": "0.5",
                        "value": "steelblue"
                    }
                },
                "hover": {
                    "fill": {
                        "fillOpacity": "0.5",
                        "value": "red"
                    }
                }
            }
        }
    ]
}